package com.test.microservice.Deposit.rest;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class DepositRest {
	
	@GetMapping("/deposit/{bathToDeposit}")
	public String doDeposit(@PathVariable("bathToDeposit") long bathToDeposit){
		return "Deposit Done: "+bathToDeposit;
	}
}
